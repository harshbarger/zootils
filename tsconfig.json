{
  "compilerOptions": {
    "target": "ES2022",
    "declaration": true,
    "module": "ESNext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "removeComments": false,
    "allowImportingTsExtensions": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "types": ["vitest/importMeta"],
  },

  "include": ["src/*", "types.d.ts"],
}
